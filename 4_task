int i = 1;
bool not = true;

Console.WriteLine("Введите ваше число:");
int mynumber = Convert.ToInt32(Console.ReadLine());

Console.WriteLine("Чётными числами от 1 до " + mynumber + " являются:");
while (i <= mynumber)
{
	if (i % 2 != 1)
	{
		Console.Write(i + ", ");
		not = false;
	}
	i++;
}

if (not)
{
	Console.WriteLine("Нет чётных чисел!");
}
